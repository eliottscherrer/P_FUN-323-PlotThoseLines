@using Microsoft.AspNetCore.WebUtilities;
@using PlotThoseLines.Extensions;
@inject HttpClient Http
@inject LocalAssetService LocalAssetService
@page "/assets"

<h1>Assets</h1>

<!-- API Assets Section -->
<div class="mb-4">
    <h5 class="mb-0">API Assets</h5>
    <div class="d-flex flex-column gap-3">
        @if (apiAssets != null && apiAssets.Any())
        {
            @foreach (var asset in apiAssets)
            {
                <div class="border rounded p-3 bg-white d-flex justify-content-between align-items-center asset-card">
                    <div class="d-flex align-items-center">
                        <img src="@asset.Logo" alt="@asset.Name logo" width="40" height="40" class="me-3 asset-logo" />
                        <div>
                            <h6 class="mb-1">@asset.Name</h6>
                            <small class="text-muted">@asset.Symbol?.ToUpper()</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="text-end me-3">
                            <div class="fw-bold">$@asset.Price.ToShortNumber()</div>
                            <small class="text-muted">Added: @asset.DateAdded.ToString("MMM dd, yyyy")</small>
                        </div>
                        <button class="btn btn-outline-danger btn-sm" 
                                @onclick="() => RemoveAsset(asset.Id)" 
                                title="Remove asset">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash2-icon lucide-trash-2"><path d="M10 11v6"/><path d="M14 11v6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/><path d="M3 6h18"/><path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                        </button>
                    </div>
                </div>
            }
        }
        
        <div class="border rounded p-3 bg-light d-flex justify-content-center align-items-center add-asset-btn" 
             style="cursor: pointer; border-style: dashed !important;" 
             @onclick="ShowAddAssetModal">
            <div class="text-center">
                <i class="bi bi-plus-circle me-2"></i>
                Import new API asset
            </div>
        </div>
        
        @if (apiAssets == null || !apiAssets.Any())
        {
            <div class="text-center py-3">
                <p class="text-muted mb-0">No API assets saved yet</p>
            </div>
        }
    </div>
</div>

<!-- Local Assets Section -->
<div class="mb-4">
    <h5 class="mb-0">Local Assets</h5>
    <div class="d-flex flex-column gap-3">
        @if (localOnlyAssets != null && localOnlyAssets.Any())
        {
            @foreach (var asset in localOnlyAssets)
            {
                <div class="border rounded p-3 bg-white d-flex justify-content-between align-items-center asset-card local-asset-card">
                    <div class="d-flex align-items-center">
                        <div class="position-relative">
                            <img src="@asset.Logo" alt="@asset.Name logo" width="40" height="40" class="me-3 asset-logo" />
                            <span class="local-badge">
                                <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 7h-9"/>
                                    <path d="M14 17H5"/>
                                    <circle cx="17" cy="17" r="3"/>
                                    <circle cx="7" cy="7" r="3"/>
                                </svg>
                            </span>
                        </div>
                        <div>
                            <h6 class="mb-1">@asset.Name</h6>
                            <small class="text-muted">@asset.Symbol?.ToUpper()</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="text-end me-3">
                            <div class="fw-bold">$@asset.Price.ToShortNumber()</div>
                            <small class="text-muted">@(asset.HistoryData?.Count ?? 0) data points</small>
                        </div>
                        <button class="btn btn-outline-danger btn-sm" 
                                @onclick="() => RemoveAsset(asset.Id)" 
                                title="Remove asset">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            }
        }
        
        <div class="border rounded p-3 bg-light d-flex justify-content-center align-items-center add-asset-btn" 
             style="cursor: pointer; border-style: dashed !important;" 
             @onclick="ShowAddLocalAssetModal">
            <div class="text-center">
                <i class="bi bi-plus-circle me-2"></i>
                Import new local asset
            </div>
        </div>
        
        @if (localOnlyAssets == null || !localOnlyAssets.Any())
        {
            <div class="text-center py-3">
                <p class="text-muted mb-0">No local assets saved yet</p>
            </div>
        }
    </div>
</div>

<AddAssetModal IsVisible="showAddAssetModal" 
               OnClose="HideAddAssetModal" 
               OnAssetAdded="OnAssetAdded" />

<AddLocalAssetModal IsVisible="showAddLocalAssetModal" 
                    OnClose="HideAddLocalAssetModal" 
                    OnAssetAdded="OnAssetAdded" />

@code {
    private List<LocalAsset>? apiAssets;
    private List<LocalAsset>? localOnlyAssets;
    private string? errorMessage;
    private bool showAddAssetModal = false;
    private bool showAddLocalAssetModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocalAssets();
    }

    private async Task LoadLocalAssets()
    {
        try
        {
            apiAssets = LocalAssetService.GetApiAssets();
            localOnlyAssets = LocalAssetService.GetLocalAssets();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading local assets: {ex.Message}";
        }
    }

    private void ShowAddAssetModal()
    {
        showAddAssetModal = true;
    }

    private void HideAddAssetModal()
    {
        showAddAssetModal = false;
    }

    private void ShowAddLocalAssetModal()
    {
        showAddLocalAssetModal = true;
    }

    private void HideAddLocalAssetModal()
    {
        showAddLocalAssetModal = false;
    }

    private async Task OnAssetAdded()
    {
        await LoadLocalAssets();
        StateHasChanged();
    }

    private async Task RemoveAsset(string? assetId)
    {
        if (string.IsNullOrWhiteSpace(assetId)) return;

        try
        {
            var success = await LocalAssetService.RemoveAssetAsync(assetId);
            if (success)
            {
                await LoadLocalAssets();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error removing asset: {ex.Message}";
        }
    }
}

<style>
    .asset-card {
        transition: all 0.2s ease;
    }

    .asset-logo {
        border-radius: 50%;
    }

    .local-asset-card {
        border-left: 3px solid #6366f1 !important;
    }

    .local-badge {
        position: absolute;
        bottom: 0;
        right: 10px;
        background-color: #6366f1;
        color: white;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid white;
    }

    .add-asset-btn {
        transition: all 0.2s ease;
    }

    .add-asset-btn:hover {
        background-color: #e9ecef !important;
        border-color: #6366f1 !important;
    }
</style>