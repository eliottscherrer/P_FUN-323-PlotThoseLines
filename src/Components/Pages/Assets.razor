@using Microsoft.AspNetCore.WebUtilities;
@inject HttpClient Http
@inject LocalAssetService LocalAssetService
@page "/assets"

<h1>Assets</h1>

<div class="d-flex flex-column gap-3">
    @if (localAssets != null && localAssets.Any())
    {
        @foreach (var asset in localAssets)
        {
            <div class="border rounded p-3 bg-white d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <img src="@asset.Logo" alt="@asset.Name logo" width="40" height="40" class="me-3" />
                    <div>
                        <h6 class="mb-1">@asset.Name</h6>
                        <small class="text-muted">@asset.Symbol?.ToUpper()</small>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="text-end me-3">
                        <div class="fw-bold">@asset.Price.ToString("C2")</div>
                        <small class="text-muted">Added: @asset.DateAdded.ToString("MMM dd, yyyy")</small>
                    </div>
                    <button class="btn btn-outline-danger btn-sm" 
                            @onclick="() => RemoveAsset(asset.Id)" 
                            title="Remove asset">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        }
    }
    
    <div class="border rounded p-3 bg-light d-flex justify-content-center align-items-center" 
         style="cursor: pointer; border-style: dashed !important;" 
         @onclick="ShowAddAssetModal">
        <div class="text-center">
            <i class="bi bi-plus-circle me-2"></i>
            Import new API asset
        </div>
    </div>
    
    @if (localAssets == null || !localAssets.Any())
    {
        <div class="text-center py-4">
            <i class="bi bi-folder2-open" style="font-size: 3rem; color: #6c757d;"></i>
            <h5 class="mt-3 text-muted">No assets saved yet</h5>
            <p class="text-muted">Click the button above to add your first cryptocurrency.</p>
        </div>
    }
</div>

<AddAssetModal IsVisible="showAddAssetModal" 
               OnClose="HideAddAssetModal" 
               OnAssetAdded="OnAssetAdded" />

@code {
    private List<LocalAsset>? localAssets;
    private string? errorMessage;
    private bool showAddAssetModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocalAssets();
    }

    private async Task LoadLocalAssets()
    {
        try
        {
            localAssets = LocalAssetService.GetAssets();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading local assets: {ex.Message}";
        }
    }

    private void ShowAddAssetModal()
    {
        showAddAssetModal = true;
    }

    private void HideAddAssetModal()
    {
        showAddAssetModal = false;
    }

    private async Task OnAssetAdded()
    {
        await LoadLocalAssets();
        StateHasChanged();
    }

    private async Task RemoveAsset(string? assetId)
    {
        if (string.IsNullOrWhiteSpace(assetId)) return;

        try
        {
            var success = await LocalAssetService.RemoveAssetAsync(assetId);
            if (success)
            {
                await LoadLocalAssets();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error removing asset: {ex.Message}";
        }
    }
}